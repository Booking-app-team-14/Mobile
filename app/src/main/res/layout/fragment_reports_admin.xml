<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.ReportsFragmentAdmin">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/adminReportsTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/primary_blue"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/primary_blue"
        app:tabTextColor="@color/text_black"
        android:elevation="4dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users\nreports" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accommodation\nreview reports" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner\nreview reports" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/adminReportsViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</FrameLayout>