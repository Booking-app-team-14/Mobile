<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_logo"
        android:contentDescription="Logo" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your email inbox"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for signing in!"
        android:textSize="16sp"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" We sent you an activation link to complete your registration. It lasts 24h, click on it!"
        android:textSize="16sp"
        android:layout_below="@+id/textViewSubtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/textViewNotReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't receive the email?"
        android:textColor="#AAAAAA"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/textViewResendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Email"
        android:textColor="#3498db"
        android:layout_below="@+id/textViewNotReceived"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:onClick="onResendEmailClick"/>

    <Button
        android:id="@+id/buttonOpenGmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Gmail"
        android:layout_below="@+id/textViewResendEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:onClick="onOpenGmailClick"/>

    <TextView
        android:id="@+id/textViewGmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Gmail"
        android:textColor="#3498db"
        android:layout_below="@+id/buttonOpenGmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:onClick="onResendEmailClick"/>



</RelativeLayout>
